<% provide(:title, "Home") %>

<div class="jumbotron">
  <div class="center">
    <h1 >Healthy Habits</h1>
    <h2>
      Sign up to get personalized healthy habits to work on every day.
    </h2>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= f.submit "Create my account", class: "btn btn-primary center" %>
      <% end %>
    </div>
  </div>

  <div class="center">
    <p id="login">Already have an account? <%= link_to "Log in", login_path %></p>
    <hr class="align-self-end" style="border-color: #606060;">
    <h2>
      Don't want to create an account? Click the button below to generate healthy habits
      without one.
    </h2>
    <%= link_to "Generate Habits", '/habits', class: "btn btn-lg btn-primary", style: "font-size: 15px;"%>
  </div>
</div>

